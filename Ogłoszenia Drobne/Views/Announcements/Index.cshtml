@model IEnumerable<Ogłoszenia_Drobne.Models.Announcement>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
    var userId = HttpContext.Current.User.Identity.GetUserId();
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("My Announcements", "My")
</p>
<table class="table">
  
    @using (@Html.BeginForm())
    {
        <div class="form-group">
            <div class="input-group">
                <div class="form-outline">
                    @Html.TextBox("search")
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>

        </div>

    }

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfEntries)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
      

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfEntries)
                </td>
             
                <td>
                    @if (item.IdAuthor == userId)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })} |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @if (item.IdAuthor == userId)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })}
                </td>
            </tr>
        
    }

</table>
