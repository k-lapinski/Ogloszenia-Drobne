<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"  style="margin-bottom: 10px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ogłoszenia drobne", "Index", "Newsletters", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Announcements", "Index", "Announcements")</li>
                    <li>@Html.ActionLink("Create Announcement", "Create", "Announcements")</li>

                </ul>


                @Html.Partial("_LoginPartial")
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (HttpContext.Current.User.Identity.Name.Equals("Kamil123@wp.pl"))
                    {
                        <li>@Html.ActionLink("Create News", "Create", "Newsletters")</li>
                    }
                    @if (HttpContext.Current.User.Identity.Name.Equals("Kamil123@wp.pl"))
                    {
                        <li>@Html.ActionLink("Create Category", "Create", "Categories")</li>
                    }
                    @if (HttpContext.Current.User.Identity.Name.Equals("Kamil123@wp.pl"))
                    {
                        <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                    } @if (HttpContext.Current.User.Identity.Name.Equals("Kamil123@wp.pl"))
                    {
                        <li>@Html.ActionLink("Dictionary", "Index", "Dictionaries")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <br/><br />
         <div class="container body-content">
             <br /><br />
             @RenderBody()
             <hr />
             <footer>
                 <p>&copy; @DateTime.Now.Year - Kamil Łapiński & Jakub Kowalewski</p>
             </footer>
         </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
